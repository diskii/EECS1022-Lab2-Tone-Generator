<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".ToneGenerator"
              android:weightSum="1">


    <ImageView
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:id="@+id/headerImage"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:src="@drawable/sinewave"
        android:scaleType="fitXY"/>
    <Space
        android:layout_weight="0.05"
        android:layout_width="fill_parent"
        android:layout_height="0dp"/>
    <TextView
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="@string/amplitude_title"
        android:id="@+id/amplitudeText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="fill_parent"
        android:weightSum="1.0"
        android:layout_height="0dp">

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/amplitudeValue"/>

        <SeekBar
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/changeAmplitude"
            android:indeterminate="false" />
    </LinearLayout>

    <Space
        android:layout_weight="0.05"
        android:layout_width="fill_parent"
        android:layout_height="0dp"/>
    <TextView
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="@string/frequency_title"
        android:id="@+id/frequencyText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="fill_parent"
        android:weightSum="1.0"
        android:layout_height="0dp">

        <TextView
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0000"
            android:id="@+id/frequencyValue"/>

        <SeekBar
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/changeFrequency"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/instructions"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_weight="0.4"/>
</LinearLayout>

